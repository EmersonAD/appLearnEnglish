<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NumbersFragment"
    android:background="@drawable/segundo_fundo">

    <ImageView
        android:id="@+id/imgUm"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/um"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDois"
        android:layout_width="180dp"

        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"

        android:scaleType="centerCrop"
        android:src="@drawable/dois"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUm" />

    <ImageView
        android:id="@+id/imgTres"
        android:layout_width="180dp"

        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"

        android:scaleType="centerCrop"
        android:src="@drawable/tres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDois" />

    <ImageView
        android:id="@+id/imgQuatro"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/quatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCinco"
        android:layout_width="180dp"

        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"

        android:scaleType="centerCrop"
        android:src="@drawable/cinco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuatro" />

    <ImageView
        android:id="@+id/imgSeis"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"

        android:scaleType="centerCrop"
        android:src="@drawable/seis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCinco" />

</androidx.constraintlayout.widget.ConstraintLayout>